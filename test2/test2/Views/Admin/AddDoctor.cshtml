<main class="layout-default_body_main p-8 ">
    <form method="post" class="space-y-8 bg-white p-8 shadow rounded-lg">
        <div class="section space-y-6">
            <h1 class="first-text">Doctor Information</h1>

            <div class="grid grid-cols-2 gap-6">
                <div class="col">
                    <label for="Did">ID</label>
                    <input id="Did" name="Did" type="text" placeholder="Doctor ID" value="@Model.Did">
                </div>

                <div class="col">
                    <label for="DoctorImg">Photo</label>
                    <div class="flex items-center" style="display: flex; flex-direction: row;">
                        <div class="user-icon"></div>
                        <button type="button" class="change-btn">Change</button>
                    </div>
                </div>

                <div class="col">
                    <label for="Name">Full Name</label>
                    <input id="Name" name="Name" type="text" value="@Model.Name">
                </div>

                <div class="col-full">
                    <label for="Phone">Phone Number</label>
                    <input id="Phone" name="Phone" type="tel" placeholder="Phone number" value="@Model.Phone">
                </div>

                <div class="col">
                    <label for="gender">Gender</label>
                    <input id="Gender" name="Gender "/>

                </div>

                <div class="col">
                    <label for="Dob">Date of Birth</label>
                    <input id="Dob" name="Dob" type="date" value="@Model.Dob?.ToString("yyyy-MM-dd")">
                </div>

                <div class="col">
                    <label for="Position">Position</label>
                    <select id="Position" name="Position">
                        @foreach (var position in ViewBag.Position)
                        {
                            <option value="@position">@position</option>
                        }
                    </select>

                </div>

