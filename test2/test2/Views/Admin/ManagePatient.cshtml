@{
    Layout = "Layout_Admin";
}

@section Styles {
    <style>


        .doctor-dashboard {
            display: flex;
            flex-direction: column;
            width: 100%;
        }

        .header1 {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

            .header1 .search-container {
                display: flex;
            }

            .header1 input {
                width: 200px;
            }

        .doctor-table img {
            border-radius: 50%;
        }

        .btn-info {
            background-color: #3D5EE9;
            color: white;
            padding: 5px 10px;
            margin-right: 5px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .delete-btn {
            background-color: #dc3545;
            color: white;
            padding: 5px 10px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .pagination {
            margin-top: 20px;
        }

        .btn-primary {
            position: relative;
            right: 8px;
        }

        /* aaaaa */
        /* Centering icon and text on the same line */
        .icon-text {
            display: inline-flex;
            align-items: center;
            justify-content: center;
        }

            .icon-text i {
                font-size: 16px;
                margin-right: 5px;
            }

        /* Table styling */
        .table th, .table td {
            text-align: justify; /* Center the text and icons */
            text-align: center;
            padding: 10px;
        }
        

        .table img {
            border-radius: 50%;
            width: 60px;
            height: 60px;
        }

        .sort-options{
            width:40%;
        }

        button.btn {
            margin-right: 5px; /* Khoảng cách giữa các nút */
        }

        a {
            text-decoration: none;
        }

    </style>
}

 @model IEnumerable<test2.Data.Patient>

<div class="doctor-dashboard">
    <div class="header1 d-flex justify-content-between align-items-center mb-4">
        <div class="search-container d-flex">
            <input type="text" placeholder="Search here..." class="form-control me-2">
            <button class="btn btn-primary">
                <i class="fas fa-search"></i>
            </button>
        </div>
        <a asp-controller="Admin" asp-action="AddPatient">
            <button class="btn btn-primary">
                <i class="fas fa-plus"></i> Add Patient
            </button>
        </a>
    </div>

    <div class="sort-options d-flex mb-4">
        <select class="form-select me-2" id="sortGender">
            <option value="">All Genders</option>
            <option value="Male">Male</option>
            <option value="Female">Female</option>
        </select>
        <select class="form-select me-2" id="sortStatus">
            <option value="">All Price</option>
            <option value="Full-time">?-?</option>
            <option value="Part-time">?-?</option>
        </select>
        <select class="form-select me-2" id="sortStatus">
            <option value="">Sort ID</option>
            <option value="Full-time">Cao- thap</option>
            <option value="Part-time">Thap-cao</option>
        </select>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    <div class="icon-text">
                        <i class="fas fa-hashtag"></i>
                        ID
                    </div>
                </th>
                <th>
                    <div class="icon-text">
                        <i class="fas fa-user"></i>
                        Name
                    </div>
                </th>
                <th>
                    <div class="icon-text">
                        <i class="fas fa-venus-mars"></i>
                        Gender
                    </div>
                </th>
                <th>
                    <div class="icon-text">
                        <i class="fas fa-calendar"></i>
                        DOB
                    </div>
                </th>
                <th>
                    <div class="icon-text">
                        <i class="fas fa-phone"></i>
                        Phone
                    </div>
                </th>
                <th>
                    <div class="icon-text">
                        <i class="fas fa-cogs"></i>
                        Options
                    </div>
                </th>
            </tr>
        </thead>
        <tbody id="patient-list">
            @foreach (var patient in Model)
            { 
                    <tr>
                        <td>@patient.Pid</td>
                        <td>@patient.Name</td>
                        <td>@patient.Gender</td>
                        <td>@patient.Dob?.ToString("dd/MM/yyyy")</td>
                        <td>@patient.Phone</td>
                        <td>
                            <a asp-controller="Admin" asp-action="PatientDetails" asp-route-id="@patient.Pid">
                                <button class="btn btn-info">Details</button>
                            </a>
                            <a asp-controller="Admin" asp-action="DeletePatient" asp-route-id="@patient.Pid">
                                <button class="btn btn-danger">Delete</button>
                            </a>
                        </td>
                    </tr>
                }
            }
        </tbody>

    </table>

    <!-- Tailwind CSS Pagination -->
    <div class="tailwindTotal flex items-center justify-between border-t border-gray-200 bg-[#F8F9FA] px-4 py-3 sm:px-6">
        <div class="hidden sm:flex sm:flex-1 sm:items-center sm:justify-between">
            <div>
                <p class="text-sm text-gray-700">
                    Showing
                    <span class="font-medium">@((ViewBag.CurrentPage - 1) * 10 + 1)</span>
                    to
                    <span class="font-medium">@((ViewBag.CurrentPage) * 10)</span>
                    of
                    <span class="font-medium">@ViewBag.TotalPatients</span>
                    results
                </p>
            </div>
            <div>
                <nav class="isolate inline-flex -space-x-px rounded-md shadow-sm" aria-label="Pagination">
                    <!-- Previous Button -->
                    <a asp-action="ManagePatient" asp-route-page="@(ViewBag.CurrentPage - 1)" class="relative inline-flex items-center rounded-l-md px-2 py-2 text-gray-400 ring-1 ring-inset ring-gray-300 hover:bg-gray-50 focus:z-20 focus:outline-offset-0 @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                        <span class="sr-only">Previous</span>
                        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                        </svg>
                    </a>

                    @for (int i = 1; i <= ViewBag.TotalPages; i++)
                    {
                        <a asp-action="ManagePatient" asp-route-page="@i"
                           class="relative inline-flex items-center px-3 py-1 text-sm font-semibold text-gray-900 ring-1 ring-inset ring-gray-300 hover:bg-gray-50 focus:z-20 focus:outline-offset-0 @(ViewBag.CurrentPage == i ? "z-10 text-white" : "")"
                           style="@(ViewBag.CurrentPage == i ? "background-color:#0D6EFD;" : "")">
                            @i
                        </a>
                    }


                    <!-- Next Button -->
                    <a asp-action="Managedoctor" asp-route-page="@(ViewBag.CurrentPage + 1)" class="relative inline-flex items-center rounded-r-md px-2 py-2 text-gray-400 ring-1 ring-inset ring-gray-300 hover:bg-gray-50 focus:z-20 focus:outline-offset-0 @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                        <span class="sr-only">Next</span>
                        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                        </svg>
                    </a>
                </nav>
            </div>
        </div>
    </div>
