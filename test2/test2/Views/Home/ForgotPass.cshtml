</head>
    <body>
        
        <div class="back-to-home rounded d-none d-sm-block">
        <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-icon btn-primary"><i data-feather="home" class="icons"></i></a>
        </div>

        <!-- Hero Start -->
        <p>gfjhdalkfhdsajkfhdsajkaflhdsajaklfdska</p>
        <section class="bg-home d-flex bg-light align-items-center">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-5 col-md-8">
                        <div class="card login-page bg-white shadow mt-4 rounded border-0">
                            <div class="card-body">
                                <h4 class="text-center">Password Recovery</h4>

                                  @if (ViewBag.ErrorMessage != null)
                                   {
                                       <p style="color: red; text-align: center;">@ViewBag.ErrorMessage</p>
                                   }
                                  @if (ViewBag.SuccessMessage != null)
                                  {
                                        <p style="color: blue; text-align: center;">@ViewBag.SuccessMessage</p>
                                  }

                                @if (Model is ForgotPassModel)
                            {
                                <form asp-action="ForgotPassword" method="post" class="login-form mt-4">
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <p class="text-muted">Please enter your email, we will send the new password to your email.</p>
                                            <div class="mb-3">
                                                <label class="form-label">Email <span class="text-danger">*</span></label>
                                                <input class="form-control" type="email" required />
                                                <span class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-lg-12">
                                            <div class="d-grid">
                                                <button id="submit" class="btn btn-primary">Confirm</button>
                                            </div>
                                        </div>
                                        <div class="mx-auto">
                                            <p class="mb-0 mt-3"><a asp-action="Login" class="text-dark h6 mb-0">Login</a></p>
                                        </div>
                                    </div>
                                </form>
                            }
                            else if (Model is ResetPassModel)
                            {
                                <form asp-action="ResetPassword" method="post" class="login-form mt-4">
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <p class="text-muted">Please enter your new password.</p>
                                            <div class="mb-3">
                                                <label class="form-label">New Password: <span class="text-danger">*</span></label>
                                                <input class="form-control" type="password" required />
                                                <span class="text-danger"></span>
                                            </div>
                                            <div class="mb-3">
                                                <label class="form-label">Confirm Password: <span class="text-danger">*</span></label>
                                                <input class="form-control" type="password" required />
                                                <span class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-lg-12">
                                            <div class="d-grid">
                                                <button id="submit" class="btn btn-primary">Confirm</button>
                                            </div>
                                        </div>
                                        <div class="mx-auto">
                                            <p class="mb-0 mt-3"><a asp-action="Login" class="text-dark h6 mb-0">Login</a></p>
                                        </div>
                                    </div>
                                </form>
                            }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        
        

        <script src="~/assets/js/bootstrap.bundle.min.js"></script>
        <script src="~/assets/js/feather.min.js"></script>
        <script src="~/assets/js/app.js"></script>
    </body>

</html>

