@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/Layout_new.cshtml";
    var url = ViewBag.ReturnUrl;
}

@section CSS {
    <link href="~/Content/plugin/notifyjs/lobibox.min.css" rel="stylesheet" />
}
<!-- Start main-content -->

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="account-content">
                    <div class="row align-items-center justify-content-center">
                        <div class="col-md-7 col-lg-6 login-left">
                            <img src="~/Content/theme/img/login-banner.png" class="img-fluid" alt="Doccure Login">
                        </div>
                        <div class="col-md-12 col-lg-6 login-right">
                            <div class="login-header">
                                <h3>Login <span>DocCare</span></h3>
                            </div>

                            @if (TempData["ErrorMessage"] != null)
                            {
                                <div class="alert alert-danger" id="alert-error">@TempData["ErrorMessage"]</div>
                            }

                            <form method="post" asp-controller="Home" asp-action="Login" name="login-form" class="clearfix" id="frmLogin" autocomplete="off">
                                <div class="form-group form-focus">
                                    <input type="text" id="Email" placeholder="Email" name="email" autocomplete="false" class="form-control floating">
                                    <label class="focus-label">Email <span class="text-danger">*</span></label>
                                </div>
                                <div class="form-group form-focus">
                                    <input type="password" id="Password" name="password" placeholder="Password" autocomplete="false" class="form-control floating">
                                    <label class="focus-label">Password <span class="text-danger">*</span></label>
                                </div>
                                <div class="text-right">
                                    <a class="forgot-link" asp-area="" asp-controller="Home" asp-action="ForgotPass" id="demo-bootbox-bounce">Forgot Password ?</a>
                                </div>
                                <button class="btn btn-primary btn-block btn-lg login-btn" id="btnLogin" type="submit">Login</button>
                                <div class="login-or">
                                    <span class="or-line"></span>
                                    <span class="span-or">or</span>
                                </div>
                                <div class="row form-row social-login">
                                    <div class="col-6">
                                        <a href="#" class="btn btn-facebook btn-block disabled"><i class="fab fa-facebook-f mr-1"></i> Login</a>
                                    </div>
                                    <div class="col-6">
                                        <a asp-controller="Home" asp-action="GoogleLogin" class="btn btn-google btn-block">
                                            <img src="https://upload.wikimedia.org/wikipedia/commons/c/c1/Google_%22G%22_logo.svg" alt="Google Logo" width="20" height="20">
                                            Google
                                        </a>
                                    </div>
                                </div>
                                <div class="text-center dont-have">Don’t have an account? <a asp-area="" asp-controller="Home" asp-action="SignUp">Register</a></div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- end main-content -->
@section Scripts {
    <script src="https://accounts.google.com/gsi/client" async defer></script>
    
    <script>
        // Ẩn thông báo sau 2 giây
        setTimeout(function() {
            var errorAlert = document.getElementById('alert-error');
            var successAlert = document.getElementById('alert-success');
            if (errorAlert) {
                errorAlert.style.display = 'none';
            }
            if (successAlert) {
                successAlert.style.display = 'none';
            }
        }, 2000);
    </script>
}
