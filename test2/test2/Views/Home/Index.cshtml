@{
    Layout = "Layout";
    ViewData["Title"] = "Home Page";
}


  <section class="bg-half-260 d-table w-100" style="background: url('@Url.Content("~/assets/images/bg/banner.jpg")') center;">
      <div class="bg-overlay bg-overlay-"></div>
      <div class="container">
          <div class="row mt-5 mt-lg-0">
              <div class="col-12">
                  <div class="heading-title">
                      <img src="assets/images/icon-logo.png" height="5" width="5" alt="">
                      <h4 class="display-4 fw-bold text-white title- mt-3 mb-4">
                        <br>
                          Online Healthcare <br> Registration System</h4>
                      <p class="para-desc text-white-50 mb-0">If you or your loved one needs immediate assistance, emergency treatment through a simple consultation.</p>
                  </div>
              </div>
          </div>
      </div>
  </section>

<section class="section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-10">
                <div class="features-absolute bg-white shadow rounded overflow-hidden card-group">
                    <div class="card border-0 bg-light p-4">
                        <i class="ri-heart-pulse-fill text-primary h2 mb-0"></i>
                        <h5 class="mt-1">Healthcare Services</h5>
                        <p class="text-muted mt-2">We bring you the highest quality services available on the market.</p>
                        <a asp-area="" asp-controller="Home" asp-action="ServiceList" class="text-primary">Learn more <i class="ri-arrow-right-line align-middle"></i></a>
                    </div>

                    <div class="card border-0 p-4">
                        <i class="ri-dossier-fill text-primary h2 mb-0"></i>
                        <h5 class="mt-1">Online Booking</h5>
                        <p class="text-muted mt-2">Our team of doctors is always ready to consult and examine just for you.</p>
                        <br>
                        <a asp-area="" asp-controller="Home" asp-action="DoctorList" class="text-primary">Learn more <i class="ri-arrow-right-line align-middle"></i></a>
                    </div>

                    <div class="card border-0 bg-light p-4">
                        <i class="ri-time-fill text-primary h2 mb-0"></i>
                        <h5 class="mt-1">Operating Hours</h5>
                        <ul class="list-unstyled mt-2">
                            <li class="d-flex justify-content-between">
