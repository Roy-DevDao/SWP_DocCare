<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="keywords" content="doccare, medical, appointment, doctor, booking" />
    <meta name="description" content="Healthcare system, appointment scheduling" />
    <meta property="og:title" content="Doccare.ml - Find Doctors Easily - Schedule Appointments Conveniently" />
    <meta property="og:description" content="Healthcare system, appointment scheduling" />
    <meta property="og:site_name" content="doccare.ml" />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="en_US" />
    <link rel="shortcut icon" href="https://shreethemes.in/Doccare/layouts/assets/images/favicon.ico">
    <link href="~/assets/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/css/materialdesignicons.min.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/css/remixicon.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="~/assets/css/tiny-slider.css" />
    <link href="~/assets/css/style.min.css" rel="stylesheet" type="text/css" id="theme-opt" />
    <link href="~/assets/css/select2.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/assets/css/flatpickr.min.css">
    <link href="~/assets/css/jquery.timepicker.min.css" rel="stylesheet" type="text/css" />
    <script src="~/assets/js/jquery.min.js" type="text/javascript"></script>
    <script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <link href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha384-k6RqeWeci5ZR/Lv4MR0sA0FfDOMZ/gJf69O2rD9w0z8c9p2QTRXcUm+X0FEx0F" crossorigin="anonymous">

    <style>
        .logo {
            display: none;
        }
    </style>
</head>


<body>


    <header id="topnav" class="navigation sticky">
        <div class="container d-flex justify-content-between align-items-center">
            <div>
                <a class="logo" href="home">
                    <img src="~/assets/images/medical.png" height="65" width="80" class="logo--mode" alt="">
                </a>
            </div>

            <ul class="dropdowns list-inline mb-0">
                <li class="list-inline-item mb-0 ms-1">
                    <div class="dropdown dropdown-primary">
                        <button type="button" class="btn btn-pills btn-soft-primary dropdown-toggle p-0" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <img src="~/assets/images/avata.png" class="avatar avatar-ex-small rounded-circle" alt="">
                        </button>
                        <div class="dropdown-menu dd-menu dropdown-menu-end bg-white shadow border-0 mt-3 py-3" style="min-width: 200px;">
                            <a class="dropdown-item d-flex align-items-center" href="#">
                                <img src="assets/images/default-user.png" class="avatar avatar-md-sm rounded-circle border shadow" alt="">
                                <div class="flex-1 ms-2">
                                    <span class="d-block mb-1">Nguyễn Văn A</span>
                                </div>
                            </a>
                            <div class="dropdown-divider border-top"></div>
                            <a class="dropdown-item" href="user?action=profile">My account</a>
                            <a class="dropdown-item" href="user?action=logout">Log out</a>
                        </div>
                    </div>
                </li>
            </ul>
        </div>
    </header>


    <div class="page-wrapper doctris-theme toggled">

        <nav id="sidebar" class="sidebar-wrapper">
            <div class="sidebar-content" data-simplebar style="height: calc(100% - 60px);">
                <div class="sidebar-brand text-center">
                    <a href="home">
                        <img src="~/assets/images/medical.png" height="65" width="80" class="logo--mode" alt="">
                    </a>
                </div>

                <ul class="sidebar-menu pt-3">
                    <li><a asp-area="" asp-controller="Staff" asp-action="AppoitmentList"><i class="fas fa-calendar-alt me-2 d-inline-block"></i>Appointment Schedule</a></li>
                    <li><a asp-area="" asp-controller="Staff" asp-action="ServiceAppointList"><i class="fas fa-stethoscope me-2 d-inline-block"></i>Service Appointments</a></li>
                    <li><a asp-area="" asp-controller="Staff" asp-action="ContactList"><i class="fas fa-user-md me-2 d-inline-block"></i>Contact</a></li>
                    <li><a asp-area="" asp-controller="Staff" asp-action="Schedule"><i class="fas fa-user-md me-2 d-inline-block"></i>Schedule for Doctor</a></li>

                    <!-- Other links -->
                </ul>

            </div>
        </nav>

        <main class="page-content bg-light">
            @RenderBody()

            <footer class="bg-white shadow py-3">
                <div class="container-fluid">
                    <div class="row align-items-center">
                        <div class="col">
                            <div class="text-sm-start text-center">
                                <p class="mb-0 text-muted">
                                    <script>document.write(new Date().getFullYear())</script>
                                    © DocCare.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </footer>

        </main>
    </div>

    <script src="~/assets/js/jquery.min.js"></script>
    <script src="~/assets/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/js/simplebar.min.js"></script>
    <script src="~/assets/js/select2.min.js"></script>
    <script src="~/assets/js/select2.init.js"></script>
    <script src="~/assets/js/flatpickr.min.js"></script>
    <script src="~/assets/js/flatpickr.init.js"></script>
    <script src="~/assets/js/jquery.timepicker.min.js"></script>
    <script src="~/assets/js/timepicker.init.js"></script>
    <script src="~/assets/js/feather.min.js"></script>
    <script src="~/assets/js/app.js"></script>
</body>
</html>


