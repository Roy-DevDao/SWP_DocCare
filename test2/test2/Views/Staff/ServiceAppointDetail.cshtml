@{
    Layout = "Layout_staff";
    ViewData["Title"] = "Service Appointment Detail from Staff";
}

<div class="container-fluid">
    <div class="layout-specing">
        <div class="row">
            <div class="col-lg-6 col-md-6">
                <div class="bg-white rounded shadow overflow-hidden">
                    <div class="p-4 border-bottom">
                        <h5 class="mb-0">Patient Information</h5>
                    </div>
                    <div class="text-center avatar-profile margin-nagative mt-n5 position-relative pb-4 border-bottom">
                        <img src="~/assets/images/doctors/bs-hanh.png" class="rounded-circle shadow-md avatar avatar-md-md" alt="">
                        <h5 class="mt-3 mb-1">Nguyễn Văn A</h5>
                    </div>
                    <div class="list-unstyled p-4">
                        <div class="d-flex align-items-center mt-2">
                            <i class="uil uil-user align-text-bottom text-primary h5 mb-0 me-2"></i>
                            <h6 class="mb-0">Gender</h6>
                            <p class="text-muted mb-0 ms-2">Male</p>
                        </div>
                        <div class="d-flex align-items-center mt-2">
                            <i class="uil uil-book-open align-text-bottom text-primary h5 mb-0 me-2"></i>
                            <h6 class="mb-0">Phone Number</h6>
                            <p class="text-muted mb-0 ms-2">0123456789</p>
                        </div>
                        <div class="d-flex align-items-center mt-2">
                            <i class="uil uil-medical-drip align-text-bottom text-primary h5 mb-0 me-2"></i>
                            <h6 class="mb-0">Date of Birth</h6>
                            <p class="text-muted mb-0 ms-2">01/01/1990</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-6">
                <div class="bg-white rounded shadow overflow-hidden">
                    <div class="p-4 border-bottom">
                        <h5 class="mb-0">Service Information</h5>
                    </div>
                    <div class="text-center avatar-profile margin-nagative mt-n5 position-relative pb-4 border-bottom">
                        <img src="~/assets/images/doctors/bs-oanh.png" class="rounded-circle shadow-md avatar avatar-md-md" alt="">
                        <h5 class="mt-3 mb-1">Medical Checkup</h5>
                    </div>
                    <div class="list-unstyled p-4">
                        <div class="d-flex align-items-center mt-2">
                            <i class="uil uil-book-open align-text-bottom text-primary h5 mb-0 me-2"></i>
                            <h6 class="mb-0">Category</h6>
                            <p class="text-muted mb-0 ms-2">Health Check</p>
                        </div>
                        <div class="d-flex align-items-center mt-2">
                            <i class="uil uil-book-open align-text-bottom text-primary h5 mb-0 me-2"></i>
                            <h6 class="mb-0">Service Fee</h6>
                            <p class="text-muted mb-0 ms-2">500,000 VND</p>
                        </div>
                        <div class="d-flex align-items-center mt-2">
                            <i class="uil uil-book-open align-text-bottom text-primary h5 mb-0 me-2"></i>
                            <h6 class="mb-0">More</h6>
                            <p class="text-muted mb-0 ms-2">...</p>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <div class="card border-0 shadow overflow-hidden mt-4">
            <div class="p-4 border-bottom">
                <h5 class="mb-0">Appointment Information</h5>
            </div>
            <div class="tab-content p-4">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="mb-3">
                            <label class="form-label">Appointment Date</label>
                            <p>25/09/2024</p>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="mb-3">
                            <label class="form-label">Time</label>
                            <p>10:00 AM</p>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="mb-3">
                            <label class="form-label">Status</label>
                            <p>Complete</p>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="mb-3">
                            <label class="form-label">Support Staff</label>
                            <p>Trần Văn B</p>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="mb-3">
                            <label class="form-label">Details</label>
                            <p>Regular health check-up</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card border-0 shadow overflow-hidden mt-4">
            <div class="p-4 border-bottom">
                <h5 class="mb-0">Update Information</h5>
            </div>
            <form action="reservationmanage?action=update&id=1&staff=staff_username" method="POST">
                <div class="tab-content p-4">
                    <div class="col-lg-12">
                        <div class="mb-3">
                            <label class="form-label">Support Staff</label>
                            <select name="staff" class="form-select">
                                <option selected class="form-control" value="staff1">Nguyễn Văn C</option>
                                <option class="form-control" value="staff2">Nguyễn Văn D</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Status</label>
                            <select name="status" class="form-select" aria-label="Default select example">
                                <option selected value="Complete">Complete</option>
                                <option value="Assigned">Assigned</option>
                                <option value="Pending">Pending</option>
                                <option value="Cancelled">Cancelled</option>
                            </select>
                        </div>
                        <input type="submit" id="submit" name="send" class="btn btn-primary" value="Confirm">
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>