@section Styles {
    <style>


    </style>
}

@model Admin.Models.Patient

<main class="layout-default_body_main">
    <div class="whole-main">
        <div class="profile-header">
            <div class="profile-info">
                <h4>Id: 456</h4>
                <h4>Patient: John Doe</h4>
            </div>
            <div class="divider"></div>
            <div class="profile-status">
                <p>Status:</p>
                <p>Active</p>
            </div>
        </div>

        <div class="profile-main">
            <div class="box-left">
                <div class="basic-info">
                    <div class="basic-info-header">
                        <h4>Basic Information</h4>
                    </div>
                    <div class="basic-info-main">
                        <div class="info-row">
                            <div class="label">Gender:</div>
                            <div class="value">Male</div>
                        </div>
                        <div class="info-row">
                            <div class="label">DOB:</div>
                            <div class="value">01/01/1990</div>
                        </div>
                        <div class="info-row">
                            <div class="label">Address:</div>
                            <div class="value">123 Main St, City</div>
                        </div>
                        <div class="info-row">
                            <div class="label">Phone:</div>
                            <div class="value">+123456789</div>
                        </div>
                    </div>
                </div>

                <div class="intro">
                    <div class="basic-info-header">
                        <h4>Medical History</h4>
                    </div>
                    <div class="intro-main">
                        No medical history available
                    </div>
                </div>
            </div>

            <div class="box-right">

                <div class="feedback">
                    <div class="basic-info-header">
                        <h4>Feedback Summary</h4>
                    </div>
                    <div class="feedback-stats">
                        <div class="feedback-item">
                            <h4>Total Services Used</h4>
                            <div class="progress-bar">
                                <div class="progress" style="width: 70%;"></div>
                            </div>
                            <p>35 out of 50 services used</p>
                        </div>

                        <!-- Thống kê tổng quan -->
                        <div class="feedback-item">
                            <h4>Statistics Overview</h4>
                            <div class="stats-grid">
                                <div class="stat-box">
                                    <h4>Average Rating</h4>
                                    <div class="stat-value">4.5 ★</div>
                                </div>
                                <div class="stat-box">
                                    <h4>Total Appointments</h4>
                                    <div class="stat-value">120</div>
                                </div>
                                <div class="stat-box">
                                    <h4>Total Feedback</h4>
                                    <div class="stat-value">100</div>
                                </div>
                            </div>
                        </div>

                        <div class="feedback-item">
                            <h4>Feedback</h4>
                            <ul class="patient-feedback">
                                <li>"Excellent service and very professional."</li>
                                <li>"Quick and easy booking process."</li>
                                <li>"Staff could be more friendly."</li>
                            </ul>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</main>