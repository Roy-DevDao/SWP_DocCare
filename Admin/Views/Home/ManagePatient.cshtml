@{
    Layout = "_Layout";  // Layout chính mà bạn đã định nghĩa
}

@section Styles {
    <style>


        .doctor-dashboard {
            display: flex;
            flex-direction: column;
            width: 100%;
        }

        .header1 {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

            .header1 .search-container {
                display: flex;
            }

            .header1 input {
                width: 200px;
            }

        .doctor-table img {
            border-radius: 50%;
        }

        .edit-btn {
            background-color: #3D5EE9;
            color: white;
            padding: 5px 10px;
            margin-right: 5px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .delete-btn {
            background-color: #dc3545;
            color: white;
            padding: 5px 10px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .pagination {
            margin-top: 20px;
        }

        .btn-primary {
            position: relative;
            right: 8px;
        }

        /* aaaaa */
        /* Centering icon and text on the same line */
        .icon-text {
            display: inline-flex;
            align-items: center;
            justify-content: center;
        }

            .icon-text i {
                font-size: 16px;
                margin-right: 5px;
            }

        /* Table styling */
        .table th, .table td {
            text-align: justify; /* Center the text and icons */
            text-align: center;
            padding: 10px;
        }
        

        .table img {
            border-radius: 50%;
            width: 60px;
            height: 60px;
        }

        .sort-options{
            width:40%;
        }

        button.btn {
            margin-right: 5px; /* Khoảng cách giữa các nút */
        }

        a {
            text-decoration: none;
        }

    </style>
}

 @model IEnumerable<Admin.Models.Patient>

<div class="doctor-dashboard">
    <div class="header1 d-flex justify-content-between align-items-center mb-4">
        <div class="search-container d-flex">
            <input type="text" placeholder="Search here..." class="form-control me-2">
            <button class="btn btn-primary">
                <i class="fas fa-search"></i>
            </button>
        </div>
        <a asp-controller="Home" asp-action="AddPatient">
            <button class="btn btn-primary">
                <i class="fas fa-plus"></i> Add Patient
            </button>
        </a>
    </div>

    <div class="sort-options d-flex mb-4">
        <select class="form-select me-2" id="sortGender">
            <option value="">All Genders</option>
            <option value="Male">Male</option>
            <option value="Female">Female</option>
        </select>
        <select class="form-select me-2" id="sortStatus">
            <option value="">All Price</option>
            <option value="Full-time">?-?</option>
            <option value="Part-time">?-?</option>
        </select>
        <select class="form-select me-2" id="sortStatus">
            <option value="">Sort ID</option>
            <option value="Full-time">Cao- thap</option>
            <option value="Part-time">Thap-cao</option>
        </select>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    <div class="icon-text">
                        <i class="fas fa-hashtag"></i>
                        ID
                    </div>
                </th>
                <th>
                    <div class="icon-text">
                        <i class="fas fa-user"></i>
                        Name
                    </div>
                </th>
                <th>
                    <div class="icon-text">
                        <i class="fas fa-venus-mars"></i>
                        Gender
                    </div>
                </th>
                <th>
                    <div class="icon-text">
                        <i class="fas fa-calendar"></i>
                        DOB
                    </div>
                </th>
                <th>
                    <div class="icon-text">
                        <i class="fas fa-phone"></i>
                        Phone
                    </div>
                </th>
                <th>
                    <div class="icon-text">
                        <i class="fas fa-cogs"></i>
                        Options
                    </div>
                </th>
            </tr>
        </thead>
        <tbody id="doctor-list">
            @foreach (var patient in Model)
            {
                <tr>
                    <td>@patient.Pid</td>
                    <td>@patient.Name</td>
                    <td>@patient.Gender</td>
                    <td>@patient.Dob?.ToString("dd/MM/yyyy")</td>
                    <td>@patient.Phone</td>
                    <td>
                        <a asp-controller="Home" asp-action="PatientDetails" asp-route-id="@patient.Pid">
                            <button class="btn btn-info">Details</button>
                        </a>
                        <a asp-controller="Home" asp-action="DeletePatient" asp-route-id="@patient.Pid">
                            <button class="btn btn-danger">Delete</button>
                        </a>

                    </td>
                </tr>
            }
        </tbody>
    </table>

    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link" asp-action="Doctor" asp-route-page="@(ViewBag.CurrentPage - 1)">Previous</a>
            </li>
            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")">
                    <a class="page-link" asp-action="Doctor" asp-route-page="@i">@i</a>
                </li>
            }
            <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                <a class="page-link" asp-action="Doctor" asp-route-page="@(ViewBag.CurrentPage + 1)">Next</a>
            </li>
        </ul>
    </nav>
</div>
