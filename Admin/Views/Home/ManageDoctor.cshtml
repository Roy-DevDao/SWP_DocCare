@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles {
    <style>
        .doctor-dashboard {
            display: flex;
            flex-direction: column;
            width: 100%;
        }

        .header1 {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

            .header1 .search-container {
                display: flex;
            }

            .header1 input {
                width: 200px;
            }

        .doctor-table img {
            border-radius: 50%;
        }

        .edit-btn {
            background-color: #0D6EFD;
            color: white;
            padding: 5px 10px;
            margin-right: 5px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .delete-btn {
            background-color: #dc3545;
            color: white;
            padding: 5px 10px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .pagination {
            margin-top: 20px;
        }

        .btn-primary {
            position: relative;
            right: 8px;
        }


    </style>
}
<div class="doctor-dashboard">
    <div class="header1 d-flex justify-content-between align-items-center mb-4">
        <div class="search-container d-flex">
            <input type="text" placeholder="Search here..." class="form-control me-2">
            <button class="btn btn-primary">
                <i class="fas fa-search"></i>
            </button>
        </div>
        <a asp-controller="Home" asp-action="AddDoctor">
            <button class="btn btn-primary" >
                <i class="fas fa-plus"></i> Add Doctor
            </button>
        </a>
        

    </div>

    <div class="sort-options d-flex mb-4">
        <select class="form-select me-2" id="sortGender">
            <option value="">All Genders</option>
            <option value="Male">Male</option>
            <option value="Female">Female</option>
        </select>
        <select class="form-select me-2" id="sortStatus">
            <option value="">All Status</option>
            <option value="Full-time">Full-time</option>
            <option value="Part-time">Part-time</option>
        </select>
        <select class="form-select" id="sortSpeciality">
            <option value="">All Specialities</option>
            <option value="Cardiologist">Cardiologist</option>
            <option value="Neurologist">Neurologist</option>
            <option value="Dermatologist">Dermatologist</option>
            <option value="Orthopedic">Orthopedic</option>
            <option value="Pediatrician">Pediatrician</option>
            <option value="Oncologist">Oncologist</option>
            <option value="Ophthalmologist">Ophthalmologist</option>
            <option value="ENT Specialist">ENT Specialist</option>
            <option value="Psychiatrist">Psychiatrist</option>
            <option value="General Practitioner">General Practitioner</option>
        </select>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th><i class="fas fa-image"></i> Image</th>
                <th><i class="fas fa-user"></i> Name</th>
                <th><i class="fas fa-venus-mars"></i> Gender</th>
                <th><i class="fas fa-briefcase"></i> Position</th>
                <th><i class="fas fa-stethoscope"></i> Speciality</th>
                <th><i class="fas fa-info-circle"></i> Status</th>
                <th><i class="fas fa-cogs"></i> Options</th>
            </tr>
        </thead>
        <tbody id="doctor-list">
            <!-- Doctor rows will be inserted here -->
        </tbody>
    </table>

    <div class="pagination d-flex justify-content-center align-items-center">
        <button class="btn btn-primary" id="prev-page">Previous</button>
        <span id="current-page" class="mx-3">1</span> / <span id="total-pages"></span>
        <button class="btn btn-primary" id="next-page">Next</button>
    </div>
</div>
