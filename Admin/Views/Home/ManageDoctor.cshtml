

@section Styles {
    <style>
        .sort-options {
            width: 40%;
        }

        .doctor-dashboard {
            display: flex;
            flex-direction: column;
            width: 100%;
        }

        .header1 {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

            .header1 .search-container {
                display: flex;
            }

            .header1 input {
                width: 200px;
            }

        .doctor-table img {
            border-radius: 50%;
        }

        .edit-btn {
            background-color: #0D6EFD;
            color: white;
            padding: 5px 10px;
            margin-right: 5px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .delete-btn {
            background-color: #dc3545;
            color: white;
            padding: 5px 10px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .pagination {
            margin-top: 20px;
        }

        .btn-primary {
            position: relative;
            right: 8px;
        }

        .table th {
            text-align: justify;
            vertical-align: middle;
            padding: 10px;
        }

        .icon-text {
            display: inline-flex;
            align-items: center;
            justify-content: center;
        }

            .icon-text i {
                font-size: 16px;
                margin-right: 5px;
            }

        .table td img {
            border-radius: 50%;
            width: 60px;
            height: 60px;
        }

        .table td, .table th {
            padding: 10px;
        }

        button.btn {
            margin-right: 5px;
        }

        a {
            text-decoration: none;
        }
    </style>
}

@model IEnumerable<Admin.Models.Doctor>

<div class="doctor-dashboard">
    <div class="header1 d-flex justify-content-between align-items-center mb-4">
        <div class="search-container d-flex">
            <input type="text" placeholder="Search here..." class="form-control me-2">
            <button class="btn btn-primary">
                <i class="fas fa-search"></i>
            </button>
        </div>
        <a asp-controller="Home" asp-action="AddDoctor">
            <button class="btn btn-primary">
                <i class="fas fa-plus"></i> Add Doctor
            </button>
        </a>
    </div>

    <div class="sort-options d-flex mb-4">
        <select class="form-select me-2" id="sortGender">
            <option value="">All Genders</option>
            <option value="Male">Male</option>
            <option value="Female">Female</option>
        </select>
        <select class="form-select me-2" id="sortStatus">
            <option value="">All Price</option>
            <option value="Full-time">?-?</option>
            <option value="Part-time">?-?</option>
        </select>
        <select class="form-select me-2" id="sortStatus">
            <option value="">Sort ID</option>
            <option value="Full-time">Cao- thap</option>
            <option value="Part-time">Thap-cao</option>
        </select>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    <div class="icon-text">
                        <i class="fas fa-hashtag"></i>
                        ID
                    </div>
                </th>
                <th>
                    <div class="icon-text">
                        <i class="fas fa-image"></i>
                        Image
                    </div>
                </th>
                <th>
                    <div class="icon-text">
                        <i class="fas fa-user"></i>
                        Name
                    </div>
                </th>
                <th>
                    <div class="icon-text">
                        <i class="fas fa-venus-mars"></i>
                        Gender
                    </div>
                </th>
                <th>
                    <div class="icon-text">
                        <i class="fas fa-briefcase"></i>
                        Position
                    </div>
                </th>
                <th>
                    <div class="icon-text">
                        <i class="fas fa-tag"></i>
                        Price
                    </div>
                </th>
                <th>
                    <div class="icon-text">
                        <i class="fas fa-cogs"></i>
                        Options
                    </div>
                </th>
            </tr>
        </thead>
        <tbody id="doctor-list">
            @foreach (var doctor in Model)
            {
                <tr>
                    <td>@doctor.Did</td>
                    <td>
                        <img src="@doctor.DoctorImg" alt="Doctor Image" class="doctor-img" />
                    </td>
                    <td>@doctor.Name</td>
                    <td>@doctor.Gender</td>
                    <td>@doctor.Position</td>
                    <td>@doctor.Price</td>
                    <td>
                        <a asp-controller="Home" asp-action="DoctorDetails" asp-route-id="@doctor.Did">
                            <button class="btn btn-info">Details</button>
                        </a>
                        <a asp-controller="Home" asp-action="DeleteDoctor" asp-route-id="@doctor.Did">
                            <button class="btn btn-danger">Delete</button>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link" asp-action="Doctor" asp-route-page="@(ViewBag.CurrentPage - 1)">Previous</a>
            </li>
            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")">
                    <a class="page-link" asp-action="Doctor" asp-route-page="@i">@i</a>
                </li>
            }
            <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                <a class="page-link" asp-action="Doctor" asp-route-page="@(ViewBag.CurrentPage + 1)">Next</a>
            </li>
        </ul>
    </nav>
</div>