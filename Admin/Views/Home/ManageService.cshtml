@section Styles {
    <style>


        .doctor-dashboard {
            display: flex;
            flex-direction: column;
            width: 100%;
        }

        .header1 {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

            .header1 .search-container {
                display: flex;
            }

            .header1 input {
                width: 200px;
            }

        .doctor-table img {
            border-radius: 50%;
        }

        .edit-btn {
            background-color: #3D5EE9;
            color: white;
            padding: 5px 10px;
            margin-right: 5px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .delete-btn {
            background-color: #dc3545;
            color: white;
            padding: 5px 10px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .pagination {
            margin-top: 20px;
        }

        .btn-primary {
            position: relative;
            right: 8px;
        }

    </style>
}

<div class="doctor-dashboard">
    <div class="header1 d-flex justify-content-between align-items-center mb-4">
        <div class="search-container d-flex">
            <input type="text" placeholder="Search here..." class="form-control me-2">
            <button class="btn btn-primary">
                <i class="fas fa-search"></i>
            </button>
        </div>
        <a asp-controller="Home" asp-action="AddService">
            <button class="btn btn-primary">
				<i class="fas fa-plus"></i> Add Service
			</button>
        </a>
    </div>

    <div class="sort-options d-flex mb-4">
        <select class="form-select me-2" id="sortGender">
            <option value="">All Type</option>
            <option value="Male">abc</option>
            <option value="Female">xyz</option>
        </select>
        <select class="form-select me-2" id="sortStatus">
            <option value="">All Status</option>
            <option value="Full-time">Active</option>
            <option value="Part-time">Not active</option>
        </select>

    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th><i class="fas fa-id-badge"></i> ID</th>
                <th><i class="fas fa-concierge-bell"></i> Service Name</th>
                <th><i class="fas fa-tags"></i> Type</th>
                <th><i class="fas fa-dollar-sign"></i> Price</th>
                <th><i class="fas fa-info-circle"></i> Status</th>
                <th><i class="fas fa-cogs"></i> Options</th>
            </tr>
        </thead>
        <tbody id="doctor-list">
            <!-- Doctor rows will be inserted here -->
        </tbody>
    </table>

    <div class="pagination d-flex justify-content-center align-items-center">
        <button class="btn btn-primary" id="prev-page">Previous</button>
        <span id="current-page" class="mx-3">1</span> / <span id="total-pages"></span>
        <button class="btn btn-primary" id="next-page">Next</button>
    </div>
</div>