@section Styles {
    <style>
        .sort-options {
            width: 40%;
        }

        .doctor-dashboard {
            display: flex;
            flex-direction: column;
            width: 100%;
        }

        .header1 {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

            .header1 .search-container {
                display: flex;
            }

            .header1 input {
                width: 200px;
            }

        .doctor-table img {
            border-radius: 50%;
        }

        .edit-btn {
            background-color: #0D6EFD;
            color: white;
            padding: 5px 10px;
            margin-right: 5px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .delete-btn {
            background-color: #dc3545;
            color: white;
            padding: 5px 10px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .pagination {
            margin-top: 20px;
        }

        .btn-primary {
            position: relative;
            right: 8px;
        }

        .table th {
            text-align: justify; /* Center the text and icons */
            vertical-align: middle;
            padding: 10px;
        }

        .icon-text {
            display: inline-flex;
            align-items: center;
            justify-content: center;
        }

            .icon-text i {
                font-size: 16px;
                margin-right: 5px;
            }

        .table td img {
            border-radius: 50%;
            width: 80px;
            height: 80px;
        }

        .table td, .table th {
            padding: 10px;
        }

        button.btn {
            margin-right: 5px; /* Khoảng cách giữa các nút */
        }

        a {
            text-decoration: none; 
        }


    </style>
}

@model IEnumerable<Admin.Models.Specialty>

<div class="doctor-dashboard">
    <div class="header1 d-flex justify-content-between align-items-center mb-4">
        <div class="search-container d-flex">
            <input type="text" placeholder="Search here..." class="form-control me-2">
            <button class="btn btn-primary">
                <i class="fas fa-search"></i>
            </button>
        </div>
        <a asp-controller="Home" asp-action="AddService">
            <button class="btn btn-primary">
                <i class="fas fa-plus"></i> Add Service
            </button>
        </a>
    </div>

    <div class="sort-options d-flex mb-4">
        <select class="form-select me-2" id="sortType">
            <option value="">All Types</option>
            <option value="Type1">Type1</option>
            <option value="Type2">Type2</option>
        </select>
        <select class="form-select me-2" id="sortPrice">
            <option value="">All Prices</option>
            <option value="Low">Low</option>
            <option value="High">High</option>
        </select>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    <div class="icon-text">
                        <i class="fas fa-hashtag"></i> ID
                    </div>
                </th>
                <th>
                    <div class="icon-text">
                        <i class="fas fa-image"></i> Image
                    </div>
                </th>
                <th>
                    <div class="icon-text">
                        <i class="fas fa-user"></i> Name
                    </div>
                </th>
                <th>
                    <div class="icon-text">
                        <i class="fas fa-tag"></i> Price
                    </div>
                </th>
                <th>
                    <div class="icon-text">
                        <i class="fas fa-cogs"></i> Options
                    </div>
                </th>
            </tr>
        </thead>
        <tbody id="service-list">
            @foreach (var service in Model)
            {
                <tr>
                    <td>@service.SpecialtyId</td>
                    <td>
                        <img src="@service.SpecialtyImg" alt="Service Image" class="service-img" style="width: 60px; height: 60px;" />
                    </td>
                    <td>@service.SpecialtyName</td>
                    <td>@service.Doctors.FirstOrDefault()?.Price ?? 0</td> <!-- Assuming Price is in Doctor model -->
                    <td>
                        <a asp-controller="Home" asp-action="ServiceDetails" asp-route-id="@service.SpecialtyId">
                            <button class="btn btn-info">Details</button>
                        </a>
                        <a asp-controller="Home" asp-action="DeleteService" asp-route-id="@service.SpecialtyId">
                            <button class="btn btn-danger">Delete</button>
                        </a>
                        <a asp-controller="Home" asp-action="UpdateService" asp-route-id="@service.SpecialtyId">
                            <button class="btn edit-btn">Edit</button>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link" asp-action="Doctor" asp-route-page="@(ViewBag.CurrentPage - 1)">Previous</a>
            </li>
            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")">
                    <a class="page-link" asp-action="Doctor" asp-route-page="@i">@i</a>
                </li>
            }
            <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                <a class="page-link" asp-action="Doctor" asp-route-page="@(ViewBag.CurrentPage + 1)">Next</a>
            </li>
        </ul>
    </nav>
</div>