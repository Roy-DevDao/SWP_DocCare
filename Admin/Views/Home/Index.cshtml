@section Styles {
<style>


    .card {
        border-radius: 12px;
        padding: 20px;
    }

    .card-body i {
        display: block;
        margin-bottom: 10px;
    }

    .card-title {
        font-size: 24px;
        font-weight: bold;
    }

    .card-text {
        font-size: 14px;
        color: #6c757d;
    }

    .header-fixed {
        position: sticky;
        top: 0;
        z-index: 1000;
    }

    .chart-container {
        margin-top: 20px;
    }

    .chartTotal {
        margin: 30px 0px;
    }

    .latest-appointment .badge,
    .patient-reviews .badge {
        border-radius: 50%;
        font-size: 16px;
        padding: 10px;
    }

    .latest-appointment h6,
    .patient-reviews h6 {
        font-size: 18px;
        font-weight: bold;
    }

    .latest-appointment p,
    .patient-reviews p {
        font-size: 14px;
        color: #6c757d;
    }

    .latest-appointment .badge.bg-success {
        background-color: #28a745;
    }

    .latest-appointment .badge.bg-danger {
        background-color: #dc3545;
    }

    .patient-reviews small {
        display: block;
        font-size: 12px;
        color: #6c757d;
    }

    ul li {
        padding-bottom: 10px;
        border-bottom: 1px solid #eee;
    }

        ul li:last-child {
            border-bottom: none;
        }

</style>
}
