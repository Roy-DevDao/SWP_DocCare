@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Gender Bar Chart
        const genderCtx = document.getElementById('genderChart').getContext('2d');
        const genderChart = new Chart(genderCtx, {
            type: 'bar',
            data: {
                labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'],
                datasets: [
                    {
                        label: 'Male',
                        data: [400, 300, 600, 700, 800, 600, 700, 800, 900, 1000, null, null],
                        backgroundColor: 'rgba(54, 162, 235, 0.6)',
                    },
                    {
                        label: 'Female',
                        data: [300, 400, 500, 600, 700, 800, 900, 1000, 1100, 1200, null, null],
                        backgroundColor: 'rgba(75, 192, 192, 0.6)',
                    },
                    {
                        label: 'Children',
                        data: [200, 100, 300, 400, 500, 600, 700, 800, 900, 1000, null, null],
                        backgroundColor: 'rgba(255, 206, 86, 0.6)',
                    },
                ],
            },
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: true,
                    },
                },
            },
        });

        // Department Doughnut Chart
        const departmentCtx = document.getElementById('departmentChart').getContext('2d');
        const departmentChart = new Chart(departmentCtx, {
            type: 'doughnut',
            data: {
                labels: ['General', 'Pediatrics', 'Orthopedics', 'Cardiology', 'Dermatology'],
                datasets: [{
                    data: [50, 40, 30, 60, 69],
                    backgroundColor: ['#36A2EB', '#FFCE56', '#FF6384', '#4BC0C0', '#9966FF'],
                }],
            },
            options: {
                responsive: true,
            },
        });
    </script>

    <script>
        var skip = 3;  // Số lượng feedback đã tải ban đầu là 3
        $('#loadMoreBtn').on('click', function () {
            console.log('Button clicked!');  // Thêm dòng này để kiểm tra sự kiện clic

            $.ajax({
                url: '@Url.Action("LoadMoreFeedbacks", "Feedback")',  // Gọi hàm LoadMoreFeedbacks từ FeedbackController
                type: 'POST',
                data: { skip: skip },
                success: function (result) {
                    if (result.trim() != "") {
                        $('#feedbackList').append(result); // Thêm feedback mới vào danh sách
                        skip += 3;  // Tăng skip để lấy tiếp batch kế tiếp
                    } else {
                        $('#loadMoreBtn').hide();  // Ẩn nút khi không còn feedback nào
                    }
                }
            });
        });
    </script>

