<main class="layout-default_body_main p-8 ">
    <form class="space-y-8 bg-white p-8 shadow rounded-lg">
        <div class="section space-y-6">
            <h1 class="first-text">Doctor Information</h1>

            <div class="grid grid-cols-2 gap-6">
                <div class="col">
                    <label for="id">ID</label>
                    <input id="id" name="id" type="text" placeholder="Doctor ID">
                </div>

                <div class="col">
                    <label for="photo">Photo</label>
                    <div class="flex items-center" style="display: flex; flex-direction: row;">
                        <div class="user-icon"></div>
                        <button type="button" class="change-btn">Change</button>
                    </div>
                </div>

                <div class="col">
                    <label for="first-name">First Name</label>
                    <input id="first-name" name="first-name" type="text" autocomplete="given-name">
                </div>

                <div class="col">
                    <label for="last-name">Last Name</label>
                    <input id="last-name" name="last-name" type="text" autocomplete="family-name">
                </div>

                <div class="col">
                    <label for="gender">Gender</label>
                    <select id="gender" name="gender">
                        <option>Male</option>
                        <option>Female</option>
                        <option>Other</option>
                    </select>
                </div>

                <div class="col">
                    <label for="dob">Date of Birth</label>
                    <input id="dob" name="dob" type="date">
                </div>

                <div class="col">
                    <label for="address">Address</label>
                    <input id="address" name="address" type="text" placeholder="Doctor's address">
                </div>

                <div class="col">
                    <label for="phone">Phone Number</label>
                    <input id="phone" name="phone" type="tel" placeholder="Phone number">
                </div>
            </div>
        </div>

        <div class="section space-y-6">
            <h1 class="first-text">Additional Information</h1>

            <div class="grid grid-cols-2 gap-6">
                <div class="col">
                    <label for="position">Position</label>
                    <select id="position" name="position">
                        <option>Senior Doctor</option>
                        <option>Junior Doctor</option>
                        <option>Specialist</option>
                        <option>Consultant</option>
                    </select>
                </div>

                <div class="col">
                    <label for="speciality">Speciality</label>
                    <select id="speciality" name="speciality">
                        <option>Cardiology</option>
                        <option>Neurology</option>
                        <option>Orthopedics</option>
                        <option>Dermatology</option>
                        <option>Pediatrics</option>
                    </select>
                </div>

                <div class="col-full">
                    <label for="experience">Experience</label>
                    <textarea id="experience" name="experience" rows="3" placeholder="Enter doctor's experience details"></textarea>
                </div>

                <div class="col-full">
                    <label for="awards">Awards</label>
                    <textarea id="awards" name="awards" rows="3" placeholder="List any awards or recognitions"></textarea>
                </div>

                <div class="col">
                    <label for="status">Status</label>
                    <select id="status" name="status">
                        <option>Active</option>
                        <option>Inactive</option>
                        <option>Retired</option>
                    </select>
                </div>
            </div>
        </div>

        <div class="flex justify-end space-x-4">
            <button type="button" class="cancel-btn">Cancel</button>
            <button type="submit" class="save-btn">Save</button>
        </div>
    </form>
</main>