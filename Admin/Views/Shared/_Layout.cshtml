

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard Layout</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="../wwwroot/css/site.css">
    @* <link rel="stylesheet" href="../wwwroot/css/DoctorDetails.css">
    <link rel="stylesheet" href="../wwwroot/css/ManageDoctor.css">
    <link rel="stylesheet" href="../wwwroot/css/AddDoctor.css">
    <link rel="stylesheet" href="../wwwroot/css/ManagePatient.css">
    <link rel="stylesheet" href="../wwwroot/css/PatientDetails.css">
    <link rel="stylesheet" href="../wwwroot/css/AddPatient.css">
    <link rel="stylesheet" href="../wwwroot/css/ManageService.css">
    <link rel="stylesheet" href="../wwwroot/css/ServiceList.css">
    <link rel="stylesheet" href="../wwwroot/css/AddService.css"> *@

    <link href="~/wwwroot/css/ManagePatient.css" rel="stylesheet" asp-append-version="true">
    <link href="~/wwwroot/css/AddPatient.css" rel="stylesheet" asp-append-version="true">

    @RenderSection("Styles", required: false)

    <style>
        /* Sidebar */
        .sidebar {
            width: 250px;
            height: 100vh;
            position: fixed; /* Fixed sidebar */
            top: 0;
            left: 0;
            z-index: 1000;
            overflow-y: auto;
        }

        /* Main content area */
        .main-content {
            margin-left: 250px; /* Space for the sidebar */
            width: calc(100% - 250px);
            overflow: hidden;
        }

        /* Fixed header */
        .header-fixed {
            position: fixed;
            top: 0;
            left: 250px;
            width: calc(100% - 250px);
            z-index: 999;
        }

        /* Content area below the header */
        .content-area {
            margin-top: 70px; /* Space for the fixed header */
            padding: 20px;
            overflow-y: auto;
            height: calc(100vh - 70px); /* Adjust height to account for header */
        }

         ul li {
            padding-bottom: 0px;
            border-bottom: 0px
        }

    </style>





</head>

<body class="bg-light">
    <div class="d-flex">
        <!-- Sidebar -->
        <div class="sidebar bg-white text-dark shadow-sm d-flex flex-column p-3">
            <h1 class="fs-4 fw-bold text-primary mb-4">
                <i class="fas fa-heartbeat me-3 ms-3"></i> LOGO
            </h1>
            <ul class="nav nav-pills flex-column mb-auto">
                <li class="nav-item mb-2">
                    <a class="nav-link @(ViewContext.RouteData.Values["action"].ToString() == "Index" ? "active bg-primary text-white" : "text-dark") d-flex align-items-center" asp-controller="Home" asp-action="Index">
                        <i class="fas fa-tachometer-alt me-2"></i> Dashboard
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link @(ViewContext.RouteData.Values["action"].ToString() == "ManageService" ? "active bg-primary text-white" : "text-dark") d-flex align-items-center" asp-controller="Home" asp-action="ManageService">
                        <i class="fas fa-cogs me-2"></i> Manage Services
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link @(ViewContext.RouteData.Values["action"].ToString() == "ManageDoctor" ? "active bg-primary text-white" : "text-dark") d-flex align-items-center" asp-controller="Home" asp-action="ManageDoctor">
                        <i class="fas fa-user-md me-2"></i> Manage Doctors
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["action"].ToString() == "ManagePatient" ? "active bg-primary text-white" : "text-dark") d-flex align-items-center" asp-controller="Home" asp-action="ManagePatient">
                        <i class="fas fa-procedures me-2"></i> Manage Patients
                    </a>
                </li>
            </ul>

        </div>

        <!-- Main content -->
        <div class="main-content flex-grow-1 d-flex flex-column">
            <header class="bg-white p-3 shadow-sm d-flex justify-content-between align-items-center header-fixed">
                <input type="search" placeholder="Search..." class="form-control w-25">
                <h1 class="h5">Admin Management System</h1>
                <div class="d-flex align-items-center">
                    <span class="me-3">Tom Cook</span>
                    <img src="https://via.placeholder.com/30" alt="User Avatar" class="rounded-circle">
                </div>
            </header>

            <!-- Content Area -->
            <main class="p-4 content-area">
                @RenderBody()

            </main>
        </div>
    </div>
    @await RenderSectionAsync("Scripts", required: false)
    <script src="~/js/site.js"></script>
    <script src="~/js/JavaScript.js"></script>



</body>

</html>
